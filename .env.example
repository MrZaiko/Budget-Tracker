# ─────────────────────────────────────────────────────────────────────────────
# Budget Tracker — root .env.example
# Copy to .env and fill in your values.
#   cp .env.example .env
#
# This file is used by docker-compose.yml.
# The backend/.env is used when running the backend directly with uv.
# ─────────────────────────────────────────────────────────────────────────────

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_USER=budget
POSTGRES_PASSWORD=budget_secret
POSTGRES_DB=budget_tracker

# ── Backend ───────────────────────────────────────────────────────────────────
# OIDC — set these for production Authentik integration
OIDC_ISSUER_URL=https://auth.example.com/application/o/budget-tracker/
OIDC_AUDIENCE=budget-tracker

BASE_CURRENCY=USD
FRANKFURTER_BASE_URL=https://api.frankfurter.app
SCHEDULER_TIMEZONE=UTC
DEBUG=false

# Local auth (dev only — NEVER true in production)
LOCAL_AUTH_ENABLED=false
LOCAL_AUTH_SECRET=change-me-to-a-random-secret-at-least-32-chars

# ── Frontend ──────────────────────────────────────────────────────────────────
# The URL the browser uses to reach the API.
# In production this is your public API domain (e.g. https://api.example.com).
# When running docker-compose on localhost, keep the default below.
API_BASE_URL=http://localhost:8000

OIDC_AUTHORITY=https://auth.example.com/application/o/budget-tracker/
OIDC_CLIENT_ID=budget-tracker
OIDC_REDIRECT_URI=http://localhost:3000/callback
OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/
